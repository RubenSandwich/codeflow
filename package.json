{
  "name": "codeflow",
  "displayName": "codeFlow",
  "description": "",
  "version": "0.0.1",
  "publisher": "RubenNic",
  "engines": {
    "vscode": "^1.23.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Codeflow configuration",
      "properties": {
        "codeflow.minVolume": {
          "type": "number",
          "default": 5,
          "description": "The minimum volume codeflow can go to."
        },
        "codeflow.maxVolume": {
          "type": "number",
          "default": 20,
          "description": "The maximum volume codeflow can go to."
        },
        "codeflow.volumeUpdateInterval": {
          "type": "number",
          "default": 5,
          "description": "How many seconds to wait before updating the volume."
        },
        "codeflow.backgroundPauseMins": {
          "type": "number",
          "default": 30,
          "description": "How many mins when VS Code is not focused to background pause."
        },
        "codeflow.backgroundPauseEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Should codeflow restart when background paused and refocused?"
        }
      }
    },
    "commands": [
      {
        "command": "codeflow.pause",
        "title": "Codeflow Pause"
      },
      {
        "command": "codeflow.play",
        "title": "Codeflow Play"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  }
}
