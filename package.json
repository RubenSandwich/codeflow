{
  "name": "codeflow",
  "displayName": "codeflow",
  "description": "Typing speed controlled volume to increase your flow",
  "version": "1.0.1",
  "publisher": "rubennic",
  "license": "MIT",
  "icon": "images/logo.png",
  "galleryBanner": {
    "color": "#FFFFFF",
    "theme": "light"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "music",
    "flow",
    "volume"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/RubenSandwich/codeflow.git"
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "codeflow configuration",
      "properties": {
        "codeflow.minVolume": {
          "type": "number",
          "default": 5,
          "description": "The minimum volume codeflow can set"
        },
        "codeflow.maxVolume": {
          "type": "number",
          "default": 20,
          "description": "The maximum volume codeflow can set"
        },
        "codeflow.volumeUpdateInterval": {
          "type": "number",
          "default": 5,
          "description": "How many seconds to wait before updating the volume"
        },
        "codeflow.backgroundPauseMins": {
          "type": "number",
          "default": 20,
          "description": "How many minutes to wait while VS Code is not focused to background pause"
        },
        "codeflow.backgroundPauseEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Should codeflow restart when background paused and refocused?"
        }
      }
    },
    "commands": [
      {
        "command": "codeflow.start",
        "title": "Start codeflow"
      },
      {
        "command": "codeflow.stop",
        "title": "Stop codeflow"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && cp ./winVolume.exe ./out/winVolume.exe",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  }
}
